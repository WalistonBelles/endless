<!DOCTYPE html>
<html>
<head>
	<meta charset='utf-8'>
	<title>Endless Discovery</title>
	<title></title>
	<link href="stylesheets/bootstrap.css" rel="stylesheet" media="screen">
	<link rel='stylesheet' href='stylesheets/style.css' type='text/css'/>
	<style>
		.formulario {
			width: 400px;
			position: relative; 
			left: 35%;
			top: 50px;
			background-color: rgba(0,0,0,0.7);
			box-shadow: 0px 0px 8px 8px #000;
			text-align: center;
		}
		
		.formulario input{
			position: relative;
			width: 90%;
			left: 5%;
		}

		.formulario label{
			color: orange;
		}
		.form-group button {
			background-color: red;
		}

		@media(max-width: 500px) {
			.formulario {
				width: 300px;
				left: 3%;
				top: 0;
			}
		}
	</style>
</head>
<body>
	<% include ./header.ejs %>
	<form id="formExemplo" data-toggle="validator" role="form" class='formulario' action="/entrar" method="POST">
		<% if(validacao){ %>
		    <ul class="list-group">
		      <% for(var i = 0; i < validacao.length; i++){ %>
		      <li class="list-group-item negrito">
		          <div class="alert alert-danger" role="alert">
		            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		           <%= validacao[i].msg %>
		      </li>
		      <% } %>
		    </ul>
		<% } %>
		<div class="form-group">	    
			<label for="textNome" class="control-label">E-mail</label>	    
			<input name="email" id="textNome" class="form-control" placeholder="Digite seu e-mail..." type="email" required>  
		</div>  	  
		<div class="form-group">	    
			<label for="inputPassword" class="control-label">Senha</label>	    
			<input name ="senha" type="password" class="form-control" id="inputPassword" placeholder="Digite sua Senha..."  	      data-minlength="6" required>	    
			<span class="help-block">Mínimo de seis (6) digitos</span>	  
		</div>	  
		<div class="form-group">	    
			<center> 
				<button type="submit" class="btn btn-primary" data-toggle="tooltip" data-placement="right" title="Preencha todos os dados!">Acessar</button> 
			</center>  
		</div>
		<div class="tooltip top" role="tooltip">
        <div class="tooltip-arrow"></div>
        <div class="tooltip-inner">
          Some tooltip text!
        </div>
      </div>
		</div>
		<div style="color: white;">
			<p>
				Não tem uma conta? <a href="registro.html">Registre-se</a>.
			</p>
		</div>
	</form>
	<% include ./footer.ejs %>
	<script src="javascripts/jquery-3.4.1.js"></script>
	<script src="javascripts/bootstrap.js"></script>
	<script src="js/validator.js"></script>
	<script>
      $(function () {
	      $('[data-toggle="tooltip"]').tooltip()
	    })
  	</script>
</body>
</html>